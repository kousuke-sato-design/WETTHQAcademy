{
  "name": "webthqacademy",
  "version": "1.0.0",
  "description": "ストレスチェック知識補完プラットフォーム",
  "type": "module",
  "scripts": {
    "dev": "wrangler pages dev --local --persist-to .wrangler/state -- npm run dev:sveltekit",
    "dev:remote": "wrangler pages dev --d1 DB=webthqacademy-db --r2 VIDEOS=webthqacademy-videos -- npm run dev:sveltekit",
    "dev:sveltekit": "vite dev",
    "build": "vite build",
    "preview": "wrangler pages dev .svelte-kit/cloudflare",
    "deploy": "npm run build && wrangler pages deploy .svelte-kit/cloudflare",
    "release": "git add -A && git commit -m \"Release\" && git push origin main && npm run deploy",
    "push-deploy": "git push origin main && npm run deploy",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "db:migrate": "wrangler d1 execute webthqacademy-db --file=migrations/0001_initial_schema.sql --remote",
    "db:migrate:local": "wrangler d1 execute webthqacademy-db --file=migrations/0001_initial_schema.sql --local --persist-to .wrangler/state",
    "db:seed": "wrangler d1 execute webthqacademy-db --file=migrations/0002_seed_data.sql --remote",
    "db:seed:local": "wrangler d1 execute webthqacademy-db --file=migrations/0002_seed_data.sql --local --persist-to .wrangler/state"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251117.0",
    "@sveltejs/adapter-cloudflare": "^7.2.4",
    "@sveltejs/kit": "^2.48.4",
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@tailwindcss/postcss": "^4.1.17",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^24.10.0",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "svelte": "^5.43.4",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.9.3",
    "vite": "^7.2.2",
    "wrangler": "^4.47.0"
  },
  "dependencies": {
    "bcryptjs": "^3.0.3"
  }
}
